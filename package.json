    "css",
    "markdown",
    "rich text",
    "style",
    "sass"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffwcx/layit.css.git"
  },
  "author": "jeffwang",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.1.2",
    "cz-conventional-changelog": "^2.1.0",
    "del": "^3.0.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-csso": "^3.0.1",
    "gulp-mocha": "^5.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "node-sass": "^4.1.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
