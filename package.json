{
  "name": "post-style",
  "version": "0.0.0-semantic-release",
  "description": "CSS style for markdown",
  "main": "src/index.scss",
  "targets": {
    "main": false,
    "docs": {
      "source": "docs/index.html",
      "distDir": "dist",
      "context": "browser"
    },
    "css-dev": {
      "source": "src/index.scss",
      "distDir": "lib",
      "optimize": false
    },
    "css-prod": {
      "source": "src/index.scss",
      "distDir": "lib"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "dev": "parcel --target docs",
    "build": "npm run build-css && npm run build-css-prod",
    "build-css": "parcel build --target css-dev --no-cache",
    "build-css-prod": "parcel build --target css-prod --no-cache",
    "build-site": "parcel build --target docs",
    "lint": "stylelint src/**/*.scss",
    "fix": "stylelint src/**/*.scss --fix"
  },
  "keywords": [
    "css",
    "markdown",
    "rich text",
    "style",
    "sass"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffwcx/post.css.git"
  },
  "author": "jeffwcx",
  "license": "MIT",
  "devDependencies": {
    "@parcel/config-default": "^2.8.3",
    "@parcel/core": "^2.8.3",
    "@parcel/plugin": "^2.8.3",
    "@parcel/transformer-raw": "^2.8.3",
    "@parcel/transformer-sass": "^2.8.3",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "autoprefixer": "^10.4.13",
    "cz-conventional-changelog": "^3.3.0",
    "parcel": "^2.8.3",
    "parcel-namer-post": "link:./parcel-namer-post",
    "postcss": "^8.4.21",
    "sass": "^1.58.0",
    "semantic-release": "^20.1.0",
    "stylelint": "^15.2.0",
    "stylelint-config-standard-scss": "^7.0.1",
    "tailwindcss": "^3.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@headlessui/react": "^1.7.10",
    "@types/marked": "^4.0.8",
    "highlight.js": "^11.7.0",
    "marked": "^4.2.12",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "browserslist": "> 0.1%, last 2 versions"
}
